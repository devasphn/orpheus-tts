# Orpheus TTS Server configuration

# Server
HOST=0.0.0.0
PORT=7007

# Orpheus model (original Canopy Labs)
ORPHEUS_MODEL_NAME=canopylabs/orpheus-tts-0.1-finetune-prod

# vLLM stability and performance (critical)
VLLM_DISABLE_CUSTOM_ALL_REDUCE=1
VLLM_WORKER_MULTIPROC_METHOD=spawn
VLLM_ENGINE_ITERATION_TIMEOUT_S=300
VLLM_GPU_MEMORY_UTILIZATION=0.85

# Audio
DEFAULT_VOICE=tara
SAMPLE_RATE=24000

# Logging
LOG_LEVEL=INFO
